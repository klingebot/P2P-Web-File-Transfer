<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
  <%- include('partials/doctype') %>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script>
      const ROOM_ID = "<%= roomId %>";
  </script>
  </head>
  <body>
  <%- include('partials/header') %>
  <main class="content">
    <div class="room">
      <div class="file-drop">
        <form class="file-form">
          <input type="file" title="test"></input>
          <a href="#" class="button button--primary">Send File</a>
        </form>
      </div>

      <div class="chat">
        <div class="chat__history">
          <li class="chat__msg-global">Welcome to room <%= roomId %>!</li>
        </div>
        <form class="message-form">
          <input name="message" type="text"></input>
          <a class="button button-primary">Submit</a>
        </form>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  </body>
  <script src="/script/client.js"></script>
</html>
